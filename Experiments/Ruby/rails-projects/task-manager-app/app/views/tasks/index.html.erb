<%= link_to("Back to homepage", {controller: 'main', action: 'index'}) %><br />

<div class="tasks index">
  <h2>Tasks</h2>

  <%= link_to("Add new task", new_task_path, class: "action new") %>

  <table class="listing" summary="Task list">
    <tr class="header">
      <th>#</th>
      <th>Task</th>
      <th>Completed</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.position %></td>
        <td><%= task.name %></td>
        <td><%= task.completed? ? "Yes" : "No" %></td>
        <td><%= task.category&.name || "-" %></td>
        <td class="actions">
          <%= link_to("Show", task_path(task)) %>
          <%= link_to("Edit", edit_task_path(task)) %>
          <%= link_to("Delete", delete_task_path(task)) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
