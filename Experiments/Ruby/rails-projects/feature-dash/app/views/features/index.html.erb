<div class="page_wrap">
  <header>
    <h2>Experiences</h2>
  </header>

  <%# <%= link_to("Add New Feature", new_feature_path, class: 'action new') %>

  <% @features.each do |feature| %>
    <%= link_to(edit_feature_path(feature), :class => "feature-tile") do %>
      <div class="tile-inner tile-inner-header">
        <h4><%= feature.name %></h4>
        <% if feature.description %>
          <p class="description"><%= feature.description %></p>
        <% end %>
      </div>
      <%# <hr> %>
      <p>
        <span><strong><%= "Enabled:" %></strong></span>
        <span><%= feature.enabled.is_enabled %></span>
      </p>
      <% if feature.condition %>
        <p>
          <span><strong><%= "#{feature.condition.name}:" %></strong></span>
          <span><%= feature.condition.conditions %></span>
        </p>
      <% end %>
    <% end %>
  <% end %>
</div>