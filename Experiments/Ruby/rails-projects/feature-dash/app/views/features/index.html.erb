<div class="page_wrap">
  <header>
    <h2>Experiences</h2>
  </header>

  <%# <%= link_to("Add New Feature", new_feature_path, class: 'action new') %>

  <% @features.each do |feature| %>
    <%= link_to(edit_feature_path(feature), :class => "unstyled-anchor") do %>
      <div class="tile_feature">
        <h4><%= feature.display_name %></h4>
        <% if feature.description %>
          <p class="description"><%= feature.description %></p>
        <% end %>
        <hr>
        <p>
          <span><strong><%= "Enabled:" %></strong></span>
          <span><%= feature.enabled.is_enabled %></span>
        </p>
        <% if feature.condition %>
          <p>
            <span><strong><%= "#{feature.condition.display_name}:" %></strong></span>
            <span><%= feature.condition.conditions %></span>
          </p>
        <% end %>
        <%# <div class="switch_container"> %>
          <%# <label class="switch"> %>
            <%# <input type="checkbox" <%= feature.enabled.is_enabled ? "checked" : "" %> 
            <%# <span class="slider"></span> %>
          <%# </label> %>
        <%# </div> %>
      </div>
    <% end %>
  <% end %>
</div>